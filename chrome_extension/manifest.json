{
  "manifest_version": 3,
  "name": "Clickbait Avcısı",
  "description": "Haber başlıklarının clickbait olup olmadığını yapay zeka ile tespit eder",
  "version": "1.0.0",
  "author": "Clickbait Hunter Team",
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Clickbait Avcısı"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "permissions": [
    "activeTab"
  ],
  
  "host_permissions": [
    "http://localhost:8000/*",
    "http://127.0.0.1:8000/*"
  ]
}
